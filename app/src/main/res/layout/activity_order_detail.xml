<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    tools:context=".activity.OrderDetailActivity">

    <include layout="@layout/common_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/start_pos" />

            <TextView
                android:id="@+id/tv_address_start"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/item_title_font"
                android:textColorHint="@color/item_content_font"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/right"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:maxLines="1"
            android:textColor="@color/item_title_font"
            android:textColorHint="@color/item_content_font"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />


        <LinearLayout
            android:id="@+id/llover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/over_pos" />

            <TextView
                android:id="@+id/tv_receive_address_start"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/item_title_font"
                android:textColorHint="@color/item_content_font"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/right"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address_receive"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/item_title_font"
            android:textColorHint="@color/item_content_font"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />

        <LinearLayout
            android:id="@+id/ll_cars"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_add_cars"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/item_title_font"
                />
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/right"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:maxLines="1"
            android:textColor="@color/item_title_font"
            android:textColorHint="@color/item_content_font"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan"/>

        <LinearLayout
            android:id="@+id/ll_call_send"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_send_phone"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/item_title_font"
                android:text="这个是发货人的联系方式"/>

            <ImageView
                android:layout_margin="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/call_phone"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan"/>
        <LinearLayout
            android:id="@+id/ll_call_get"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_get_phone"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/item_title_font"
                android:text="这个是发货人的联系方式"/>

            <ImageView
                android:layout_margin="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/call_phone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/item_title_font"
                android:text="分享的链接"/>

            <ImageView
                android:layout_margin="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/right"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/divider_color_dan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:textColor="@color/item_title_font"
            android:text="货物基本信息"/>

        <TextView
            android:id="@+id/tv_cargo_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:maxLines="1"
            android:textColor="@color/item_title_font"
            android:textColorHint="@color/item_content_font"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />

        <TextView
            android:id="@+id/tv_cargo_type"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:clickable="false"
            android:textColor="@color/item_title_font"
            android:text=""
            android:textColorHint="@color/item_content_font"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />


        <TextView
            android:id="@+id/tv_way_of_loading"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:clickable="false"
            android:textColor="@color/item_title_font"
            android:text=""
            android:textColorHint="@color/item_content_font"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />

        <TextView
            android:id="@+id/tv_cargo_weight"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:clickable="false"
            android:textColor="@color/item_title_font"
            android:text=""
            android:textColorHint="@color/item_content_font"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />

        <TextView
            android:id="@+id/tv_cargo_volume"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:clickable="false"
            android:textColor="@color/item_title_font"
            android:text=""
            android:textColorHint="@color/item_content_font"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />

        <TextView
            android:id="@+id/tv_cargo_whd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:clickable="false"
            android:textColor="@color/item_title_font"
            android:text=""
            android:textColorHint="@color/item_content_font"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />

        <TextView
            android:id="@+id/tv_requirements"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:clickable="false"
            android:textColor="@color/item_title_font"
            android:text=""
            android:textColorHint="@color/item_content_font"
            android:gravity="center_vertical"
            android:textSize="16sp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />

        <TextView
            android:id="@+id/tv_cargo_wrappage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:enabled="false"
            android:clickable="false"
            android:textColor="@color/item_title_font"
            android:text=""
            android:textColorHint="@color/item_content_font"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/divider_color_dan" />

        <TextView
            android:id="@+id/tv_is_danger"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:enabled="false"
            android:clickable="false"
            android:textColor="@color/item_title_font"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/divider_color_dan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:textColor="@color/item_title_font"
            android:text="所需车辆"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text="车辆规格"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text="车辆数"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_car_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>