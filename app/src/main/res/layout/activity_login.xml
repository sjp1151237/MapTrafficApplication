<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <include layout="@layout/common_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <EditText
                android:id="@+id/et_num"
                android:layout_width="match_parent"
                android:background="@drawable/line_et_bg"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/item_title_font"
                android:textColorHint="@color/item_content_font"
                android:hint="phone num"
                />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:id="@+id/ll_location"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"
                    android:text="China"
                    android:textColor="@color/colorTip"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/right2" />

            </LinearLayout>
        </RelativeLayout>



        <EditText
            android:id="@+id/et_psw"
            android:layout_width="match_parent"
            android:background="@drawable/line_et_bg"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/item_title_font"
            android:textColorHint="@color/item_content_font"
            android:hint="psw num"/>

        <LinearLayout
            android:id="@+id/ll_changepsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/tip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:textSize="16sp"
                android:textColor="@color/colorTip"
                android:text="忘记密码"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_round_shape"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Commint"
        android:textSize="16sp"
        android:textColor="@color/white"/>

</LinearLayout>